<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xindaibao.cashloan.system.mapper.SysDictMapper">

	<resultMap id="dictResult" type="com.xindaibao.cashloan.system.domain.SysDict">
		<id column="id" property="id" />
		<result column="type_name" property="name" />
		<result column="type_code" property="code" />
		<result column="sort" property="sort" />
		<result column="remark" property="remark" />
	</resultMap>
	
	<sql id="baseSysDictWhereSql">
		<where> 
	    <if test="id != null and id != ''">
	         id = #{id}
	    </if> 
	    <if test="name != null and name != ''">
	        AND type_name = #{name}
	    </if>
	    <if test="sort != null and sort != ''">
	        AND sort = #{sort}
	    </if>
	    <if test="remark != null and remark != ''">
	        AND remark = #{remark}
	    </if>
	    <if test="code != null and code != ''">
	        AND type_code = #{code}
	    </if>
	  </where>
	</sql>
	
	<sql id="baseQuerySql">
	  id,
      type_name,
	  type_code,
	  sort,
	  remark
	</sql>
	
	<sql id="pageEnd">
		where rownum &lt;= #{end}) where rnum &gt;#{startRow}
	</sql>

	<sql id="pageStart">
		select * from (select rownum rnum,a.* from (
	</sql>
	
	<select id="listSelective" resultMap="dictResult" parameterType="java.util.HashMap">
		SELECT 
		<include refid="baseQuerySql"/>
		from arc_sys_dict
		<include refid="baseSysDictWhereSql"/>
		order by SORT desc
	</select>
	
	<select id="getItemListByMap" resultMap="dictResult" parameterType="java.util.HashMap">
		SELECT 
		<include refid="baseQuerySql"/>
		from arc_sys_dict
		<include refid="baseSysDictWhereSql"/>
		order by SORT desc
	</select>
	
	<select id="getCount" resultType="java.lang.Long" parameterType="java.util.HashMap" >
		select 
			count(1)		
	    from arc_sys_dict
		<include refid="baseSysDictWhereSql"/>
	</select>
	
	<insert id="save" parameterType="com.xindaibao.cashloan.system.domain.SysDict">
		<selectKey resultType="long" keyProperty="id">
			SELECT LAST_INSERT_ID() AS ID
		</selectKey>
		insert into arc_sys_dict(
		type_name,
		type_code,
		sort,
		remark
		)
		values (
		#{name},
		#{code},
		#{sort},
		#{remark}
		)
	</insert>
	
	<update id="update" parameterType="com.xindaibao.cashloan.system.domain.SysDict">
		update arc_sys_dict
		set
		type_name=#{name},
		type_code=#{code},
		sort=#{sort},
		remark=#{remark}
		where
		id = #{id}
	</update>
	
	<delete id="deleteById" parameterType="long">
		delete from arc_sys_dict
		where
		id = #{id}
	</delete>
	
	<select id="getDictsCache" parameterType="java.lang.String" resultType="java.util.HashMap">
		SELECT
			b.item_code as "value",
			b.item_value as "text"
		FROM
			arc_sys_dict a,
			arc_sys_dict_detail b
		WHERE
			a.id = b.parent_id
			AND a.type_code = #{type}
	</select>
	
	<select id="findByTypeCode" parameterType="java.lang.String" resultType="com.xindaibao.cashloan.system.domain.SysDict">
		SELECT 
		<include refid="baseQuerySql"/>
		from arc_sys_dict
		where type_code = #{code,jdbcType=VARCHAR}
	</select>
</mapper>