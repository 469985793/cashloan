<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xindaibao.cashloan.system.mapper.SysRolePermMapper">

	<resultMap id="BaseResultMap"
		type="com.xindaibao.cashloan.system.domain.SysRolePerm">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="role_id" property="roleId" jdbcType="INTEGER" />
		<result column="perm_id" property="permId" jdbcType="INTEGER" />
		<result column="add_time" property="addTime" jdbcType="TIMESTAMP" />
		<result column="add_user" property="addUser" jdbcType="VARCHAR" />
	</resultMap>

	<sql id="Base_Column_List">
		id, role_id, perm_id, add_time, add_user,
	</sql>

	<select id="selectByPrimaryKey" resultMap="BaseResultMap"
		parameterType="java.lang.Integer">
		select
		<include refid="Base_Column_List" />
		from arc_sys_role_perm
		where id = #{id,jdbcType=INTEGER}
	</select>

	<select id="selectByRoleId" resultMap="BaseResultMap"
		parameterType="java.lang.Integer">
		select count(*)
		from arc_sys_role_perm
		where role_id =
		#{roleId,jdbcType=INTEGER}
	</select>

	<insert id="save" parameterType="com.xindaibao.cashloan.system.domain.SysRolePerm">
		insert into arc_sys_role_perm
		(id,
		role_id, perm_id,
		add_time, add_user)
		values
		(
		#{id,jdbcType=INTEGER},
		#{roleId,jdbcType=INTEGER},
		#{permId,jdbcType=INTEGER},
		#{addTime,jdbcType=TIMESTAMP},
		#{addUser,jdbcType=VARCHAR}
		)
	</insert>

	<delete id="deleteByRoleId" parameterType="int">
		delete from
		arc_sys_role_perm
		where role_id=#{roleId}
	</delete>

	<update id="updateByPrimaryKeySelective" parameterType="com.xindaibao.cashloan.system.domain.SysRolePerm">
		update arc_sys_role_perm
		<set>
			<if test="roleId != null">
				role_id = #{roleId,jdbcType=INTEGER},
			</if>
			<if test="permId != null">
				perm_id = #{permId,jdbcType=INTEGER},
			</if>
			<if test="addTime != null">
				add_time = #{addTime,jdbcType=TIMESTAMP},
			</if>
			<if test="addUser != null">
				add_user = #{addUser,jdbcType=VARCHAR},
			</if>
		</set>
		where id = #{id,jdbcType=INTEGER}
	</update>
</mapper>